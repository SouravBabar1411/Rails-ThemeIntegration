<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table class="table table-bordered table-striped" id='player'>
  <thead class="table-dark">
    <tr>
      <th>Image</th>
      <th>Player name</th>
      <th>Email</th>
      <th>Player game</th>
      <th>Player state</th>
      <th>Player country</th>
      <th>Phone</th>
      <th>Gender</th>
      <th>Button</th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><img src="<%= player.image %>" class= "player-show"></td>
        <td><%= player.player_name %></td>
        <td><%= player.email %></td>
        <td><%= player.sport.sport_name%></td>
        <td><%= player.player_state %></td>
        <td><%= player.player_country %></td>
        <td><%= player.phone %></td>
        <td><%= player.gender %></td>
        <td><%= link_to 'Show', [@sport,player] %>
          <%= link_to 'Edit', edit_sport_player_path(@sport, player) %>
          <%= link_to 'Destroy', [@sport, player], method: :delete,  data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  <%= link_to 'New Player', new_sport_player_path(@sport), class:"btn btn-secondary" %>

